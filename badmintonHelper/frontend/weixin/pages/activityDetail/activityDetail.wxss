

.activity-detail-wrap {
  position: relative;
  width: 100vw;
  height: 100vh;
  background-color: #efefef;
  font-size: 28rpx;
  color: #333;
  overflow: auto;
  padding-bottom: 160rpx;
  box-sizing: border-box;
}

.activity-detail-wrap .activity-detail,
.activity-detail-wrap .apply-info-wrap, 
.activity-detail-wrap .organizer-wrap, 
.activity-detail-wrap .warn-wrap {
  position: relative;
  overflow: hidden;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-sizing: border-box;
  margin: 30rpx;
}

.activity-detail-wrap .name {
  font-size: 32rpx;
  font-weight: 700;
  padding-bottom: 30rpx;
}

.activity-detail-wrap .activity-status {
  position: absolute;
  right: -40rpx;
  top: 14rpx;
  padding: 8rpx 40rpx;
  /* background-color: #ccc; */
  font-size: 24rpx;
  color: #fff;
  transform: rotate(45deg);
}

.activity-detail-wrap .organizer-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  overflow: hidden;
  margin-right: 8rpx;
  vertical-align: middle;
}

.activity-detail-wrap .avatar-img {
  width: 48rpx;
  height: 48rpx;
  border-radius: 24rpx;
  overflow: hidden;
  margin: 0 2rpx;
}

.activity-detail-wrap .more-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 24rpx;
  overflow: hidden;
  text-align: center;
  line-height: 48rpx;
  margin-left: 10rpx;
  background-color: #eee;
  font-size: 40rpx;
}

.activity-detail-wrap  .info-wrap {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.activity-detail-wrap  .info-wrap .right {
  font-size: 28rpx;

}
.apply-info-wrap .right,
.organizer-wrap .right {
  margin-top: 8rpx;
  display: flex;
}

.activity-detail-wrap .info-wrap-left .iconfont {
  margin-right: 8rpx;
}

.activity-detail-wrap .warn-wrap-title {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
}

.activity-detail-wrap .bottom-btns {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-top: 1px solid #d9d9d9;
  box-sizing: border-box;
}

.activity-detail-wrap .bottom-btns-top {
  display: flex;
  justify-content: space-between;
}

.activity-detail-wrap .bottom-btns .bottom-btns-left {
  display: flex;
  height: 80rpx;
  margin-top: -8rpx;
}

.activity-detail-wrap .bottom-btns .bottom-left-btn {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-right: 40rpx;
  text-align: center;
  color: #999;
}

.activity-detail-wrap .bottom-btns .bottom-btns-right {
  border-radius: 40rpx;
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  padding: 0 60rpx;
}

.activity-detail-wrap .bottom-btns-bottom {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}

.activity-detail-wrap .pay-wrap {
  position: relative;
}

.activity-detail-wrap .pay-title {
  text-align: center;
  font-size: 32rpx;
  margin-bottom: 28rpx;
}
.activity-detail-wrap .pay-privilege {
  margin: 20rpx 0;
}

.activity-detail-wrap .pay-privilege-more {
  color: #999;
}

.activity-detail-wrap .pay-price {
  display: flex;
  margin-bottom: 28rpx;
}

.activity-detail-wrap .pay-protocol {
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
}

.activity-detail-wrap .pay-protocol-checkbox {
  font-size: 28rpx;
}