<view class="modify-info-wrap">
  <form catchsubmit="formSubmit" catchreset="formReset">
    <view class="form-area">
      <view class="form-item" bind:tap="formChange" data-itemName="{{ userFieldMap.avatarUrl }}">
        <view class="form-item-label">头像</view>
        <view class="form-item-content">
          <image class="form-item-avatar" src="{{ formData.avatarUrl }}" mode=""/>
        </view>
        <icon class="form-item-icon iconfont icon-xiangyoujiantou" />
      </view>
      <view class="form-item">
        <view class="form-item-label">昵称:</view>
        <view class="form-item-content">
          <input class="form-item-input" value="{{formData.nickName}}" placeholder="请输入活动名称" bindinput="formChange" data-itemName="{{ userFieldMap.nickName }}" />
        </view>
      </view>
      <label class="form-item">
        <view class="form-item-label">性别:</view>
        <view class="form-item-content">
          <picker bindchange="formChange" value="{{formData.gender}}" range="{{genderList}}" data-itemName="{{ userFieldMap.gender }}">
            <view class="picker">
              {{genderList[formData.gender]}}
            </view>
          </picker>
        </view>
        <icon class="form-item-icon iconfont icon-xiangyoujiantou" />
      </label>
    </view>

    <view class="form-area">
      <label class="form-item">
        <view class="form-item-label">等级:</view>
        <view class="form-item-content">
          <picker bindchange="formChange" value="{{formData.level}}" range="{{levelList}}" data-itemName="{{ userFieldMap.level }}">
            <view class="picker">
              {{levelList[formData.level]}}
            </view>
          </picker>
        </view>
        <icon class="form-item-icon iconfont icon-xiangyoujiantou" />
      </label>
      <view class="form-item">
        <view class="form-item-label">真实姓名:</view>
        <view class="form-item-content">
          <input class="form-item-input" value="{{formData.realName}}" placeholder="请输入真实姓名" bindinput="formChange" data-itemName="{{ userFieldMap.realName }}" />
        </view>
      </view>
      <view class="form-item">
        <view class="form-item-label">手机号:</view>
        <view class="form-item-content">
          <input class="form-item-input" value="{{formData.phone}}" placeholder="请输入手机号" bindinput="formChange" data-itemName="{{ userFieldMap.phone }}" />
        </view>
      </view>

    </view>

    <button type="primary" formType="submit">保存</button>
  </form>
  <mask-layer isHidden="{{ hideAvatarWrap }}">
    <view class="avatar-modify-wrap">
      <view class="avatar-modify-item" bind:tap="changeTypeClick" data-index="1">用微信头像</view>
      <view class="avatar-modify-item" bind:tap="changeTypeClick" data-index="2">从相册选择</view>
      <view class="avatar-modify-item" bind:tap="changeTypeClick" data-index="3">拍照</view>
      <view class="avatar-modify-item cancel-btn" bind:tap="changeTypeClick" data-index="4">取消</view>
    </view>
  </mask-layer>
</view>