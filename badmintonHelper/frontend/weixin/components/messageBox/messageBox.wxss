.message-box-wrap {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.7);
  opacity: 1;
  visibility: visible;
  transition: opacity .3s, visibility .3s;
}

.fade-in {
  opacity: 1;
  visibility: visible;
}
 
.fade-out {
  opacity: 0;
  visibility: hidden;
}

.message-box {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 80%;
  transform: translate(-50%, -50%);
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  box-sizing: border-box;
}

.message-box .box-close {
  position: absolute;
  right: 30rpx;
  top: 20rpx;
  color: #666;
  font-size: 24rpx;
}

.message-box .message-box-title {
  text-align: center;
  font-size: 32rpx;
  padding-bottom: 20rpx;
}
.message-box .message-box-content {
  padding: 20rpx 0;
}
.message-box .message-box-btns {
  display: flex;
  justify-content: space-around;
}

.message-box .message-box-btns .message-box-btn {
  flex: 1;
  padding: 8rpx 0;
  margin: 20rpx 20rpx 0 20rpx;
  border-radius: 40rpx;
  text-align: center;
}

.message-box .message-box-btns .message-box-btns-confirm {
  color: #fff;
}
.message-box .message-box-btns .message-box-btns-cancel {
  color: #999;
  border: 2rpx solid #d9d9d9;
}
