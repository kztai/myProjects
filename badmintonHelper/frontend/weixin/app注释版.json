// 全局配置文件。包括所有页面路径、窗口外观、界面表现、底部tab等。
{
  // 记录所有页面的路径。修改路径顺序可以改变项目的首页。（第一个就是项目的首页）
  "pages": [
    "pages/baseLearn/baseLearn",
    "pages/behaviors/behaviors",
    "pages/componentLearn/componentLearn",
    "pages/pageLearn/pageLearn",
    "pages/logs/logs",
    "pages/index/index"
  ],

  // 分包的学习：
  "subPackages": [
    {
      "root": "subPackageA",   //指向该分包的目录
      "name": "分包别名1",  // 设置分包别名
      "pages": [
        "pages/cat/cat",
        "pages/dog/dog"
      ]
    },
    {
      "root": "subPackageB",
      "name": "分包别名2",
      "independent": true,   // 用来设置是否为独立分包
      "pages": [
        "pages/apple/apple",
        "pages/banana/banana"
      ]
    }
  ],

  // 分包的预下载：当进入某个路由时，会触发这个分包的预下载
  "preloadRule": {
    "pages/navigaterLearn/navigaterLearn": {
      "packages": ["分包别名1"],
      "network": "all"   //配置是在哪个网络环境下才会触发
    }
  },

  // 全局定义所有页面的背景色、文字颜色等。
  // navigationBar开头的是设置导航栏样式的。background开头的是设置下拉窗口样式的。
  // 文档：https://developers.weixin.qq.com/miniprogram/dev/reference/configuration/app.html#window
  "window": {
    "navigationBarTitleText": "kzt",  //导航栏标题文本内容
    "navigationBarBackgroundColor": "#000000",  // 导航栏背景颜色
    "navigationBarTextStyle": "black",  //导航栏标题颜色。只支持“black”和“white”
    // "navigationStyle": "custom",  //导航栏是否用户自己做？删除这行上面的设置才会生效
    "enablePullDownRefresh": true,  //是否开启全局的下拉刷新。
    "backgroundColor": "#eee",  // 设置下拉窗口的背景色
    "backgroundTextStyle": "dark",  //设置下拉窗口中loading小圆点的样式（仅支持 dark / light）
    "onReachBottomDistance": 30,  //页面上拉触底事件触发时距页面底部距离，单位为px（默认50）
  },

  // 实现多页面的切换。可分为底部与顶部两种，其中顶部tabbar没有字体图标。页签最少2个，最多5个。
  // 文档：https://developers.weixin.qq.com/miniprogram/dev/reference/configuration/app.html#tabBar
  "tabBar": {
    "color": "#333",
    "selectedColor": "#00ff00",
    "backgroundColor": "#efefef",
    "position": "bottom",
    "list": [
      {"pagePath": "pages/baseLearn/baseLearn", "text": "首页"},
      {"pagePath": "pages/behaviors/behaviors", "text": "behaviors"},
      {"pagePath": "pages/componentLearn/componentLearn", "text": "component"}
    ]
  },

  // 全局定义所有组件所使用的样式版本。（小程序内部样式版本，值只有v2，也可以不设置。）
  "style": "v2",

  "rendererOptions": {
    "skyline": {
      "defaultDisplayBlock": true,
      "disableABTest": true,
      "sdkVersionBegin": "3.0.0",
      "sdkVersionEnd": "15.255.255"
    }
  },

  "componentFramework": "glass-easel",

  // 用来指明 sitemap.json 文件的位置：
  "sitemapLocation": "sitemap.json",

  "lazyCodeLoading": "requiredComponents"
}
