{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "ignoreDeprecations": "5.0",
        "suppressImplicitAnyIndexErrors": true,  //支持any类型
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./src",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ],
            "@/*": ["*"]
        },
    },
    "include": [
        "src/**/*"
    ]
}